<h1>Create a new song</h1>

<h3>Song</h3>
<form action="/songs" method="POST">
  <label for="Name">Song Name:</label>
  <input type="text" name="songs[name]" id="Name"></input>
  <br></br>

  <!--Artist-->
  <h3>Artist</h3>
  <label for="artist_name">Artist Name:</label>
  <br></br>
  <%@artists.each do |artist|%>
    <input type="checkbox" name="songs[artist][name]" value="<%=artist.id%>" id="<%=Artist Name%>"><%=artist.name%></input>
  <%end%>
  <br></br>

  <!--Genre-->
  <h3>Genre</h3>
  <%@genres.each do |genre|%>
    <label for="<%=genre.name%>"><%="#{genre.name}"%></label> -->
    <input id="<%=genre.name%>"type="checkbox" name="songs[genres][]" value="<%=genre.id%>">
    <br>
  <%end%>


  <br></br>
  <input type="submit" value="Create">
</form>
